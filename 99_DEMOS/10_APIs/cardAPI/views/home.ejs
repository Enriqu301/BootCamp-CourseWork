<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>Cards</title>
</head>
<body>
  <h1>Deck of Cards</h1>
    <div class="container">
      <h2>Player Hand</h2>
      <div class="hand" id="playerHand">
        <% player.sort(sortHand) %>
        <% player.forEach(card => { %>
         <img src="<%=card.image%>" alt="Card <%=card.value%> <%=card.suit%>">
        <% }) %>
      </div>

      <h2>Computer Hand</h2>
      <div class="hand" id="computerHand">
        <% computer.sort(sortHand) %>
        <% computer.forEach(card => { %>
          <img src="<%=card.image%>" alt="Card <%=card.value%> <%=card.suit%>">
         <% }) %>
      </div>
    </div>
</body>
</html>